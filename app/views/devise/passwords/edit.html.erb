<% title "Cambiar Contraseña | SuperBlog en Rails" %>

<div class="container has-text-centered">
  <div class="section">
    <div class="column is-4 is-offset-4">
      <h2 class="title">Cambiar Contraseña</h2>
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <% unless  (devise_error_messages!).empty? %>
      <div class="notification is-danger">
        <%= devise_error_messages! %>
      </div>
      <% end %>      
      <%= f.hidden_field :reset_password_token %>

      <div class="field">
        <div class="control">            
          <% if @minimum_password_length %>
          <em>Mínimo <%= @minimum_password_length %> caracteres</em><br />
          <% end %>
          <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "input is-medium" %>
        </div>
      </div>         

      <div class="field">
        <div class="control">
          <%= f.label :password_confirmation, "Confirmar nueva contraseña" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "off", class: "input is-medium" %>
        </div>       
      </div>

      <div class="actions">
        <%= f.submit "Cambiar Contraseña", class:"button is-block is-success is-medium is-fullwidth" %>
      </div>
      <br>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

