<% title "Recuperación de la cuenta | SuperBlog en Rails" %>
<div class="container has-text-centered">
	<div class="section">
		<div class="column is-4 is-offset-4">
			<h2 class="title">¿Has olvidado tu contraseña?</h2>

			<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>

			<% unless  (devise_error_messages!).empty? %>
			<div class="notification is-danger">
				<%= devise_error_messages! %>
			</div>
			<% end %>			

			<div class="field">
				<div class="control">			  
					<%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input is-medium", placeholder: "Email" %>
				</div>
			</div>			

			<div class="actions">
				<%= f.submit "Enviar", class:"button is-block is-success is-medium is-fullwidth" %>
			</div>
			<% end %>
			<br>
			<%= render "devise/shared/links" %>
		</div>
	</div>
</div>

